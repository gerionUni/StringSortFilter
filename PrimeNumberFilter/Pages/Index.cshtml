@page
@model IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Paste your strings to apply your filter, one line at a time. Pick your filter and sorting and then click submit.</p>
</div>
<div>
    <form method="POST">
        <label for="PrimeStrings">Your strings</label>
        <input id="PrimeStrings" class="form-control" rows="40" asp-for="ResultText" /><br />
        <button type="submit">Submit</button>
    </form>
</div>
